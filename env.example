# Copy this file to .env and fill in your values

# Required
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
YANDEX_API_KEY=your_yandex_speechkit_api_key
YANDEX_FOLDER_ID=your_yandex_speechkit_folder_id

# Optional (defaults shown)
# DEFAULT_VOICE=marina
# DEFAULT_ROLE=friendly
# DEFAULT_SPEED=0.95
# DEFAULT_AUDIO_FORMAT=oggopus  

# TTS Version Settings
# YANDEX_TTS_VERSION=3  # Use v3 by default for native markup support

# GPT Settings for Auto-Formatting
# GPT_MODEL=yandexgpt-lite  # Model options: yandexgpt-lite, yandexgpt-pro, yandexgpt-pro-32k
# ENABLE_AUTO_FORMAT=true  # Enable AI-powered text formatting
# MAX_PAUSE_MS=2000  # Maximum allowed pause duration in milliseconds

# Feature Flags
# USE_TTS_MARKUP=true  # Enable TTS v3 markup parsing
